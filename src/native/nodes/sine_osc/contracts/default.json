{
  "version": 1,
  "node": "SineOscillatorNode",
  "description": "Tap contract for the standalone sine oscillator consuming frequency/amplitude taps and emitting PCM audio.",
  "tap_groups": [
    {
      "name": "osc_controls",
      "direction": "input",
      "unit_shape": {
        "batches": 1,
        "channels": 2,
        "frames": 256
      },
      "dtype": "f64",
      "buffer": {
        "prealloc_units": 1024,
        "layout": "row-major"
      },
      "delivery": {
        "mode": "fifo_pc",
        "full_percent_target": 100,
        "low_watermark_percent": 0,
        "multicast": {
          "ack_policy": "all",
          "quorum_k": 1
        },
        "fifo_pc": {
          "release_policy": "on_consume"
        }
      },
      "indexing": {
        "major_order": [
          "channel",
          "unit"
        ],
        "band_indexing": "absolute"
      },
      "channels": [
        {
          "name": "frequency",
          "enabled": true,
          "count": 1,
          "active_indices": [
            0
          ],
          "active_mask_b64": null,
          "unit_shape": {
            "batches": 1,
            "channels": 1,
            "frames": 256
          },
          "hold_if_absent": true,
          "optional_default": {
            "value": 440.0,
            "units": "Hz"
          },
          "subchannels": [
            {
              "name": "value",
              "enabled": true,
              "stride_elems": 1
            }
          ]
        },
        {
          "name": "amplitude",
          "enabled": true,
          "count": 1,
          "active_indices": [
            0
          ],
          "active_mask_b64": null,
          "unit_shape": {
            "batches": 1,
            "channels": 1,
            "frames": 256
          },
          "hold_if_absent": true,
          "optional_default": {
            "value": 0.5
          },
          "subchannels": [
            {
              "name": "value",
              "enabled": true,
              "stride_elems": 1
            }
          ]
        }
      ]
    },
    {
      "name": "pcm_audio",
      "direction": "output",
      "unit_shape": {
        "batches": 1,
        "channels": 2,
        "frames": 256
      },
      "dtype": "f64",
      "buffer": {
        "prealloc_units": 4096,
        "layout": "row-major"
      },
      "delivery": {
        "mode": "fifo_pc",
        "full_percent_target": 90,
        "low_watermark_percent": 35,
        "multicast": {
          "ack_policy": "all",
          "quorum_k": 1
        },
        "fifo_pc": {
          "release_policy": "on_consume"
        }
      },
      "indexing": {
        "major_order": [
          "channel",
          "unit"
        ],
        "band_indexing": "dense_active"
      },
      "channels": [
        {
          "name": "main",
          "enabled": true,
          "count": 2,
          "active_indices": [
            0
          ],
          "active_mask_b64": null,
          "unit_shape": {
            "batches": 1,
            "channels": 1,
            "frames": 256
          },
          "subchannels": [
            {
              "name": "signal",
              "enabled": true,
              "stride_elems": 1
            }
          ]
        }
      ]
    }
  ]
}
